{
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    }
  ],
  "images": {
    "domains": [],
    "formats": ["image/avif", "image/webp"],
    "minimumCacheTTL": 31536000,
    "sizes": [640, 750, 828, 1080, 1200, 1920, 2048, 3840]
  }
}